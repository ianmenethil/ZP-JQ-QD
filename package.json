{
    "name": "zenpay-payment-plugin",
    "version": "1.0.0",
    "description": "ZenPay Payment Plugin Demo with modular JavaScript",
    "main": "build/index.html",
    "author": "Ian Menethil",
    "license": "MIT",
    "homepage": "https://zenithpayments.support",
    "repository": {
        "type": "git",
        "url": "https://github.com/ZenithPayments/zenpay-payment-plugin"
    },
    "keywords": [
        "zenpay",
        "payment",
        "plugin",
        "javascript",
        "gulp"
    ],
    "scripts": {
        "dev": "vite --mode development",
        "build": "vite build --mode production",
        "build:check": "tsc --noEmit && vite build --mode production",
        "build:dev": "tsc --noEmit && vite build --mode development",
        "preview": "vite preview",
        "type-check": "tsc --noEmit",
        "lint": "eslint src/ts --ext .ts --fix",
        "format": "prettier --write src/ts/**/*.ts",
        "clean": "rimraf ./build ./dist"
    },
    "dependencies": {
        "zod": "^4.1.1"
    },
    "devDependencies": {
        "@eslint/js": "^9.34.0",
        "@types/bootstrap": "^5.2.10",
        "@types/jquery": "^3.5.33",
        "@types/node": "^24.3.0",
        "@typescript-eslint/eslint-plugin": "^8.41.0",
        "@typescript-eslint/parser": "^8.41.0",
        "autoprefixer": "^10.4.21",
        "cssnano": "^7.1.1",
        "eslint": "^9.34.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-import": "^2.32.0",
        "eslint-plugin-prettier": "^5.5.4",
        "postcss": "^8.5.6",
        "prettier": "^3.6.2",
        "rimraf": "^6.0.1",
        "typescript": "^5.9.2",
        "typescript-eslint": "^8.41.0",
        "vite": "^7.1.3"
    }
}
